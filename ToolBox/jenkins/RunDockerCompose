pipeline {
    agent any
    environment {
        DB_PASSWORD = credentials('MSSQL-PASSWORD')
        DB_CREDENTIALS = credentials('DockerHub-Credentials')
    }
    stages {
        stage('Build and Deploy') {
            steps {
                script {
                    sh '''
                        docker stop $(docker ps -a -q)
                        docker system prune -af
                    '''
                }
                script {
                    sh '''
                        cd ./ToolBox/
                        docker compose up -d
                    '''
                }
            }
        }
    }
}
